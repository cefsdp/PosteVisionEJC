<div class="main">
    <div class="container">
        <div class="formcontainer">
            <%= simple_form_for [@etude, @intervenant] do |f| %>
                <div class="formulaire">
                    <div class="Categorie">
                        <div class="Titre">Informations sur l'intervenant :</div>
                        <div class="Contenu">
                            <div class="part">
                                <div class="item3"><%= f.association :phase, collection: @etude.phases.order(:nom), label: "Nom de la phase :", :label_method => lambda { |phase| "#{phase.nom}" } %></div>
                                <div class="item3"><%= f.association :adherent, collection: Adherent.order(:nom), :label_method => lambda { |adherent| "#{adherent.nom} | #{adherent.prenom}" } %></div>
                                <div class="item3"><%= f.input :num_rm, label: "Numero de RM :" %></div>
                            </div>
                        </div>
                    </div>
                    <%= f.submit "Enregistrer", id: "Creation" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
